<div class="container container-sm">

  <div class="row top-m">

    <!-- 投稿フォーム -->
    <%= form_with model:@body_datum, local: true do |f| %>
    <%= render "error/error_messages", model:@body_datum %>
  
      <div class="col_">
        <label for="Height" class="form-label">身長</label>
        <%= f.text_field :height, class:"form-control", id: "Height", placeholder:"例）165.0" %>
      </div>

      <div class="col_">
        <label for="Weight" class="form-label">体重</label>
        <%= f.text_field :weight, class:"form-control", id: "Weight", placeholder:"例）65.0" %>
      </div>

      <div class="col_">
        <label for="Age" class="form-label">年齢</label>
        <%= f.text_field :age, class:"form-control", id: "Age", placeholder:"例）35" %>
      </div>

      <div class="col_">
        <label class="form-label">性別</label>
        <%= f.collection_select(:sex_id, Sex.all, :id, :name, {}, {class: "form-control"}) %>
      </div>

      <div class="col_">
        <label class="form-label">活動レベル</label>
        <%= f.collection_select(:activity_level_id, ActivityLevel.all, :id, :name, {}, {class: "form-control"}) %>
      </div>
      <!--
      /活動レベルの説明 
      処理
      活動レベルの説明/
      -->

      <div class="col_">
        <label for="TargetDate" class="form-label">目標日</label>
        <%= f.date_field :target_date,id: "TargetDate", class:"form-control" %>
      </div>

      <div class="col_">
        <label for="TargetWeight" class="form-label">目標体重</label>
        <%= f.text_field :target_weight,id: "TargetWeight", class:"form-control", placeholder:"例)60.0" %>
      </div>

      <div class="col_">
        <%= f.submit "計算",class:"btn btn-success rounded-pill btn-custom" %>
      </div>

    <% end %>

    <!-- 計算結果の表示 -->
    <div class="col_">
      <div class="">基礎代謝</div>
      <div class="">kcal</div>
    </div>

    <div class="col_">
      <div class="">消費カロリー</div>
      <div class="">kcal</div>
    </div>

    <div class="col_">
      <div class="">目標摂取カロリー</div>
      <div class="">kcal</div>
    </div>

    <div class="col_">
      <div class="">P(タンパク質)</div>
      <div class="">g</div>
      <div class="">kcal</div>
    </div>

    <div class="col_">
      <div class="">C(炭水化物)</div>
      <div class="">g</div>
      <div class="">kcal</div>
    </div>

    <div class="col_">
      <div class="">F(脂質)</div>
      <div class="">g</div>
      <div class="">kcal</div>
    </div>

  </div>

</div>

